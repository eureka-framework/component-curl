{
  "name": "eureka/component-curl",
  "description": "Component Curl & Http Client PSR implementation. ",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Curl\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Curl\\Tests\\": "./tests"
    }
  },

  "require": {
    "php": ">=7.4.0",
    "ext-curl": "*",

    "nyholm/psr7": "^1.1.0",

    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.6",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpcov": "^8.2.0",
    "phpunit/phpunit": "^9.4.0",
    "squizlabs/php_codesniffer": "^3.5"
  }
}
