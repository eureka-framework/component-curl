{
  "name": "eureka/component-curl",
  "description": "Component Curl & Http Client PSR implementation. ",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Curl\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Curl\\Tests\\Unit\\": "./tests/unit",
      "Eureka\\Component\\Curl\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": ">=8.3",
    "ext-curl": "*",
    "ext-json": "*",

    "nyholm/psr7": "^1.0",

    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0||^2.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92.3",
    "phpstan/phpstan": "^2.1.33",
    "phpstan/phpstan-phpunit": "^2.0.11",
    "phpunit/phpcov": "^11.0.3",
    "phpunit/phpunit": "^12.5.4",
    "shipmonk/composer-dependency-analyser": "^1.8.4"
  }
}
