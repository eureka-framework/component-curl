{
  "name": "eureka/component-curl",
  "description": "Component Curl & Http Client PSR implementation. ",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Curl\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Curl\\Tests\\Unit\\": "./tests/unit",
      "Eureka\\Component\\Curl\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*||8.4.*",
    "ext-curl": "*",
    "ext-json": "*",

    "nyholm/psr7": "^1.5",

    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0||^2.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75.0",
    "phpstan/phpstan": "^2.1.16",
    "phpstan/phpstan-phpunit": "^2.0.6",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.46",
    "shipmonk/composer-dependency-analyser": "^1.8.3"
  }
}
